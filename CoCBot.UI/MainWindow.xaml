<Window x:Class="CoCBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:CoCBot.UI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CoCBot">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="12">
        <ComboBox x:Name="DeviceSelector"
                  Width="200"
                  PlaceholderText="Select emulator"
                  SelectionChanged="OnDeviceSelected" />
        <TextBlock x:Name="StatusText"
                   Text="Status: STOPPED"
                   FontSize="18"
                   TextAlignment="Center" />
        <Button Content="Start"
                Width="100"
                Click="OnStartClick" />
        <Button Content="Stop"
                Width="100"
                Click="OnStopClick" />
        <ComboBox x:Name="InviteModeSelector"
                  SelectionChanged="OnInviteModeChanged"
                  Width="200"
                  Margin="10">
            <ComboBoxItem Content="Clan Board"/>
            <ComboBoxItem Content="My League"
                          IsSelected="True" />
        </ComboBox>
    </StackPanel>
</Window>
